rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the recipe
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function: Validate required fields on recipe creation
    function hasRequiredFields() {
      return request.resource.data.keys().hasAll([
        'userId', 
        'title', 
        'ingredients', 
        'instructions', 
        'isPublic',
        'createdAt', 
        'updatedAt'
      ]);
    }
    
    // Helper function: Validate ingredient structure
    function hasValidIngredients() {
      return request.resource.data.ingredients is list &&
             request.resource.data.ingredients.size() > 0 &&
             // Each ingredient must have these fields
             request.resource.data.ingredients[0].keys().hasAll(['name', 'originalText']);
    }
    
    // Recipes collection
    match /recipes/{recipeId} {
      // Allow read if authenticated (ALL users can read ANY recipe)
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and userId matches auth.uid
      // Users can create recipes from frontend OR backend
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       hasRequiredFields() &&
                       hasValidIngredients();
      
      // Allow update if authenticated and owns the recipe
      allow update: if isOwner(resource.data.userId) &&
                       request.resource.data.userId == resource.data.userId && // Can't change owner
                       hasValidIngredients();
      
      // Allow delete if authenticated and owns the recipe
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Shopping Items collection
    // For MVP: All authenticated users share the same 'default-family' list
    // Future: Update to check family membership when multi-family support is added
    match /shoppingItems/{itemId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and familyId is 'default-family'
      allow create: if isAuthenticated() &&
                       request.resource.data.familyId == 'default-family' &&
                       request.resource.data.keys().hasAll(['familyId', 'name', 'isChecked', 'tagIds', 'createdAt', 'updatedAt']);
      
      // Allow update/delete if authenticated and item belongs to 'default-family'
      allow update: if isAuthenticated() &&
                       resource.data.familyId == 'default-family' &&
                       request.resource.data.familyId == 'default-family';
      
      allow delete: if isAuthenticated() &&
                       resource.data.familyId == 'default-family';
    }
    
    // Tags collection (family-specific metadata tags for shopping items)
    // For MVP: All authenticated users share the same 'default-family' tags
    match /tags/{tagId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and familyId is 'default-family'
      allow create: if isAuthenticated() &&
                       request.resource.data.familyId == 'default-family' &&
                       request.resource.data.keys().hasAll(['familyId', 'displayName', 'abbreviation', 'color', 'sortOrder', 'createdAt', 'updatedAt']);
      
      // Allow update/delete if authenticated and tag belongs to 'default-family'
      allow update: if isAuthenticated() &&
                       resource.data.familyId == 'default-family' &&
                       request.resource.data.familyId == 'default-family';
      
      allow delete: if isAuthenticated() &&
                       resource.data.familyId == 'default-family';
    }
    
    // Shopping Groups collection (user-created custom groups)
    // For MVP: All authenticated users share the same 'default-family' groups
    match /shoppingGroups/{groupId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and familyId is 'default-family'
      allow create: if isAuthenticated() &&
                       request.resource.data.familyId == 'default-family' &&
                       request.resource.data.keys().hasAll(['familyId', 'displayName', 'sortOrder', 'createdAt', 'updatedAt']);
      
      // Allow update/delete if authenticated and group belongs to 'default-family'
      allow update: if isAuthenticated() &&
                       resource.data.familyId == 'default-family' &&
                       request.resource.data.familyId == 'default-family';
      
      allow delete: if isAuthenticated() &&
                       resource.data.familyId == 'default-family';
    }
    
    // Meal Plan Items collection
    // For MVP: All authenticated users share the same 'default-family' meal plan
    match /mealPlanItems/{itemId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and familyId is 'default-family'
      allow create: if isAuthenticated() &&
                       request.resource.data.familyId == 'default-family' &&
                       request.resource.data.keys().hasAll(['familyId', 'type', 'date', 'sortOrder', 'createdAt', 'updatedAt']);
      
      // Allow update/delete if authenticated and item belongs to 'default-family'
      allow update: if isAuthenticated() &&
                       resource.data.familyId == 'default-family' &&
                       request.resource.data.familyId == 'default-family';
      
      allow delete: if isAuthenticated() &&
                       resource.data.familyId == 'default-family';
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

